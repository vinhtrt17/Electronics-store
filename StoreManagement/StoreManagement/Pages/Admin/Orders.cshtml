@page
@using System.Globalization;
@model StoreManagement.Pages.Admin.OrdersModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Order list";
}
<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>Tất cả đơn hàng của bạn</h2>
        </div>
        <table class="table table-light">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Ngày đặt</th>
                    <th scope="col">Tổng giá</th>
                    <th scope="col">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.orders)
                {
                    <tr>
                        <td scope="row">@item.Id</td>
                        @{
                            string birthday = String.Format("{0:dd/MM/yyyy}", item.Orderdate);
                        }
                        <td>@birthday</td>
                        <td>@item.Total.ToString("C",CultureInfo.CreateSpecificCulture("vn-VN")).Substring(1).Replace(",",".") ₫</td>
                        <td><a href="/Admin/OrderDetails?id=@item.Id">Chi tiết</a></td>
                    </tr>
                }
        </table>
    </div>
</div>

@section Styles{
    <link rel="stylesheet" href="~/css/cart.css">
}